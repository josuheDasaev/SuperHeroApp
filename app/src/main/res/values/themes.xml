<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SuperHeroApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#E57373</item>
        <item name="colorPrimaryVariant">#E57373</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#E57373</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">#E57373</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- navigation ui style. -->
    <style name="navigation" parent="Theme.SuperHeroApp">
        <item name="colorOnSurface">@color/black</item>             <!-- text color. -->
        <item name="colorOnSurfaceVariant">#292626</item>           <!-- icon inactive. -->
        <item name="colorOnSecondaryContainer">@color/black</item>  <!-- icon active. -->
        <item name="colorSecondaryContainer">#FFCDD2</item>         <!-- indicator color. -->
    </style>

    <!-- splash screen . -->
    <style name="splashTheme" parent="Theme.SuperHeroApp">
        <item name="android:statusBarColor" tools:targetApi="l">#F60808</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:navigationBarColor">#F60808</item>
    </style>

</resources>